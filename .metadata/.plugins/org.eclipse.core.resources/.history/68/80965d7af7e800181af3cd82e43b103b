package com.heima.syn;

public class Allan4_Ticket {
	public static void main(String[] args) {
		
	}
}

class Allan_tickSeller2 implements Runnable{
	static int tickNum=100;
	@Override
	public void run() {
		while(true){
			synchronized (Al_TickeSeller.class) {
				if(tickNum<=0){
					break;
				}
				try {
					sleep(10);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
				System.out.println(getName()+" 卖出一张票，还剩余"+--tickNum+"张票");
			}
		}
	}
	
}