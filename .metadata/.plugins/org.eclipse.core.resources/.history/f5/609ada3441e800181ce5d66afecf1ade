package com.leetcode.exercise;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Leetcode_FindAnagrams {
	public static void main(String[] args) {
		//demo1();
		String s = "cbaebabacd";
		String p = "abc";
		System.out.println(findAnagrams(s,p));

	}
	public List<Integer> findAnagrams(String s, String p) {
		char[] ch2 = p.toCharArray();
		Arrays.sort(ch2);
		ArrayList<Integer> list = new ArrayList<Integer>();
		for (int i = 0; i <= s.length() - ch2.length; i++) {
			char[] dstch = new char[ch2.length];
			s.getChars(i, i + ch2.length, dstch, 0);
			Arrays.sort(dstch);
			if ((dstch != null) && (Arrays.equals(dstch, ch2))) {
				list.add(i);
			}
		}
		return list;
	}
	private static void demo1(String s, String p) {
		String s = "cbaebabacd";
		String p = "abc";
		char[] ch2 = p.toCharArray();
		Arrays.sort(ch2);
		ArrayList<Integer> list = new ArrayList<Integer>();
		for (int i = 0; i <= s.length() - ch2.length; i++) {
			char[] dstch = new char[ch2.length];
			s.getChars(i, i + ch2.length, dstch, 0);
			Arrays.sort(dstch);
			if ((dstch != null) && (Arrays.equals(dstch, ch2))) {
				list.add(i);
			}
		}
		System.out.println(list);
	}
}
