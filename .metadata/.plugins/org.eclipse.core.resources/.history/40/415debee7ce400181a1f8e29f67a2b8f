package com.luo.demo;

public class Demo_Exercise1 {
	public static void main(String[] args) {
		// (1)boolean isEmpty(): 判断字符串是不是空串,如果是空的就返回true
		String s1 = "";
		String s2 = " ";
		System.out.println(s1.isEmpty());
		System.out.println(s2.isEmpty());
		// (2)char charAt(int index): 返回索引上的字符
		String s3 = "hello,World.javajvasFDdfsdssa";
		System.out.println(s3.charAt(3));
		// (3)String toLowerCase(): 字符串转成小写
		System.out.println(s3.toLowerCase());
		// (4)String toUpperCase(): 字符串转成大写
		System.out.println(s3.toUpperCase());
		// (5)String replace(char oldChar, char newChar): 将字符串中的老字符,替换为新字符
		System.out.println(s3.replace(',', '-'));
		// (6)String replace(String old, String newstr): 将字符串中的老字符串,替换为新字符串
		System.out.println(s3.replace("World", "JAVA"));
		// (7)String trim(): 去掉字符串两端空格*/
		String s4 = " hello world,java ";
		System.out.println(s4.trim());
	}
}
