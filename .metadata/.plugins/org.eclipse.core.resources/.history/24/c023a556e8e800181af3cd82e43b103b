package com.heima.syn;

public class Allan2_Synchronized {
	public static void main(String[] args) {
		final Allan_Print2 ap = new Allan_Print2();
		new Thread(){
			public void run(){
				for (int i = 0; i < 50; i++) {
					ap.print1();	
				}
			}
		}.start();
		new Thread(){
			public void run(){
				for (int i = 0; i < 50; i++) {
					ap.print2();	
				}
			}
		}.start();		
	}
}

class Allan_Print2{
	public void print1(){
		synchronized (Allan_Print2.class) {
			System.out.print("I");
			System.out.print("love");
			System.out.print("you");
			System.out.println();
		}
	}
	public void print2(){
		synchronized (Allan_Print2.class) {
			System.out.print("wu");
			System.out.print("xiao");
			System.out.print("hong");
			System.out.println();
		}
	}
}