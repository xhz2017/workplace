package com.heima.syn;

public class Allan3_Ticket {
	/**
	 * @param args
	 * 需求:铁路售票,一共100张,通过四个窗口卖完.
	 */

	public static void main(String[] args) {
		Al_TickeSeller seller1 = new Al_TickeSeller();
		Al_TickeSeller seller2 = new Al_TickeSeller();
		Al_TickeSeller seller3 = new Al_TickeSeller();
		Al_TickeSeller seller4 = new Al_TickeSeller();
		seller1.setName("窗口1");
		seller1.start();
		seller2.setName("窗口2");
		seller2.start();
		seller3.setName("窗口3");
		seller3.start();
		seller4.setName("窗口4");
		seller4.start();
	}

}

class Al_TickeSeller extends Thread{
	int tickNum=100;
	public void run(){
		if(tickNum<=0){
			break;
		}
		System.out.println(getName()+" 卖出一张票，还剩余"+tickNum+"张票");
	}
}