package com.luoExpress.Demo;

public class Demo_String2 {
	public static void main(String[] args) {
		String string = new String("faf'lasa'2142141DasaasaSFDSczxcz");
		String substr = "asa";
		int fromIndex=0;
		int index=0;
		index = string.indexOf(substr, fromIndex);
		while(index>=0){
			index = string.indexOf(substr, fromIndex);
			fromIndex = index;
		}
		string.indexOf(substr, fromIndex)
		//find(substr);
	}

	public static int find(String string) {
		int daxie = 0;
		int xiaoxie = 0;
		int shuzi = 0;
		int other=0;

		char[] arr = string.toCharArray();
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] >= 'A' && arr[i] <= 'Z') {
				daxie++;
			}else if(arr[i] >= 'a' && arr[i] <= 'z'){
				xiaoxie++;
			}else if(arr[i] >= '0' && arr[i] <= '9'){
				shuzi++;
			}else{
				other++;
			}
		}
		System.out.println("大写个数"+daxie+" 小写个数"+xiaoxie+" 数字个数"+shuzi+" 其他个数"+other);
		return daxie;
	}
	
	
}
