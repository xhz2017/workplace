package com.heima.test;

import java.io.File;
import java.util.Scanner;

public class TestAllan3 {
	public static void main(String[] args) {
		// (1)从键盘接收一个文件夹路径,统计该文件夹大小
		File dir = getDir();
		long total=0;
		total = printJavaFile(dir, total);
		System.out.println("total is"+total);
	}

	public static File getDir() {
		Scanner sc = new Scanner(System.in);
		System.out.println("请输入需要查找的路径");
		File file;
		while (true) {
			String line = sc.nextLine();
			file = new File(line);
			if (!file.exists()) {
				System.out.println("输入的目录不存在，请重新输入");
			} else if (file.isFile()) {
				System.out.println("输入的是文件，不是目录，请输入目录");
			} else {
				return file;
			}
		}
	}

	public static long printJavaFile(File file, long total) {
		File[] files = file.listFiles();
		
		if (files == null)
			return total;
		for (File file2 : files) {
			if (file2.isFile()) {
				System.out.println(file2.getName());
				
				total = total + file2.length();
				System.out.println("total"+total+" file"+file2.length());
			} else {
				long befor = total;
				System.out.println("befor"+total);
				total = total + printJavaFile(file2, total);
				System.out.println("befor"+befor+" after"+total+" befor-after"+(total-befor));
			}
		}
		return total;
	}
}
