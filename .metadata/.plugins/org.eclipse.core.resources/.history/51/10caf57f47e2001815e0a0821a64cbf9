package com.heima.test;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class CopyDir {
	public static void main(String[] args) {
		
	}
	public static File getDir() {
		Scanner sc = new Scanner(System.in);
		System.out.println("请输入需要查找的路径");
		File file;
		while (true) {
			String line = sc.nextLine();
			file = new File(line);
			if (!file.exists()) {
				System.out.println("输入的目录不存在，请重新输入");
			} else if (file.isFile()) {
				System.out.println("输入的是文件，不是目录，请输入目录");
			} else {
				return file;
			}
		}
	}
	public static void copyDir(File s1,File d2) {
		
	}
	public static void copyFile(File s1,File d2) throws FileNotFoundException {
		BufferedInputStream bi = 
				new BufferedInputStream(new FileInputStream(s1));
		BufferedOutputStream bo = 
				new BufferedOutputStream(new FileInputStream(d2));
	}
}
